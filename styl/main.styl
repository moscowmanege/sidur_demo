body
	margin 0
	padding 0

html, body, .column
	height 100%

.column
	&.left
		width 93px
		// background-color green
		position fixed
		z-index 9999
		.logo
			position absolute
		.adress
			bottom 0
			position absolute
		.logos
			position absolute
			top 363px
			width 100px
	&.right
		right 0
		// background-color grey
		left 93px
		position absolute
		z-index 0
		overflow scroll
		.item
			width 100%
			min-height 400px
			// background-color red
			position relative
			.poster
				display block
				margin-left 7px