body
	margin 0
	padding 0

html, body, .column
	height 100%

.column
	&.left
		width 93px
		// background-color green
		position fixed
		z-index 9999
		.logo
			position absolute
		.adress
			bottom 0
			position absolute
	&.right
		width 860px
		// background-color grey
		left 93px
		position absolute
		z-index 0
		.item
			width 100%
			min-height 400px
			// background-color red
			position relative
			.poster
				display block
				margin-left 7px
		.footer
			position relative
			img
				position absolute
				bottom 60px
				z-index 99999999
				left -98px
				width 108px